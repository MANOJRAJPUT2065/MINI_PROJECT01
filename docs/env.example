# Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Connection String
# Format: mongodb://username:password@host:port/database
# For local development: mongodb://localhost:27017/healthcare-system
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/healthcare-system
MONGO_URI=mongodb://localhost:27017/healthcare-system

# MongoDB Options (optional)
MONGO_OPTIONS={"useNewUrlParser": true, "useUnifiedTopology": true}

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Secret Key (use a strong, random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-make-it-very-long-and-random

# JWT Token Expiration (optional, default: 7d)
JWT_EXPIRES_IN=7d

# JWT Issuer (optional)
JWT_ISSUER=healthcare-system

# JWT Audience (optional)
JWT_AUDIENCE=healthcare-users

# Password Encryption Salt Rounds (optional, default: 12)
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email Service Provider (gmail, outlook, sendgrid, etc.)
EMAIL_SERVICE=gmail

# Email Credentials
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Email Configuration
EMAIL_FROM=Healthcare System <noreply@healthcaresystem.com>
EMAIL_REPLY_TO=support@healthcaresystem.com

# SMTP Configuration (if not using service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Cloudinary Configuration
CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Cloudinary Upload Presets (optional)
CLOUDINARY_UPLOAD_PRESET=healthcare-documents

# IPFS Configuration (Pinata)
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret-key

# IPFS Gateway URL (optional)
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# Local File Storage (if not using cloud)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# AI & MACHINE LEARNING SERVICES
# =============================================================================

# Google Gemini API
GEMINI_API_KEY=your-google-gemini-api-key

# OpenAI API (alternative to Gemini)
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-openai-organization-id

# AI Model Configuration
AI_MODEL_PROVIDER=gemini
AI_MODEL_NAME=gemini-pro
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Ethereum Network Configuration
ETHEREUM_NETWORK=goerli
INFURA_API_KEY=your-infura-api-key
INFURA_PROJECT_ID=your-infura-project-id

# Wallet Configuration
PRIVATE_KEY=your-ethereum-private-key
WALLET_ADDRESS=your-ethereum-wallet-address

# Smart Contract Addresses
INSURANCE_CLAIM_CONTRACT_ADDRESS=0x...
DOCTOR_REGISTRY_CONTRACT_ADDRESS=0x...
POLICY_MANAGER_CONTRACT_ADDRESS=0x...

# Gas Configuration
GAS_LIMIT=200000
GAS_PRICE=20000000000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development

# Server URL
SERVER_URL=http://localhost:5000

# Client URL (for CORS and password reset)
CLIENT_URL=http://localhost:3000

# API Version
API_VERSION=v1

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# General API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication Rate Limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5

# File Upload Rate Limiting
UPLOAD_RATE_LIMIT_WINDOW_MS=60000
UPLOAD_RATE_LIMIT_MAX_UPLOADS=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Format (combined, common, dev, short, tiny)
LOG_FORMAT=combined

# Log File Path
LOG_FILE_PATH=./logs/app.log

# Enable Console Logging
CONSOLE_LOGGING=true

# Enable File Logging
FILE_LOGGING=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Application Monitoring
ENABLE_MONITORING=true
MONITORING_SERVICE=prometheus

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Metrics Collection
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600

# Enable Caching
ENABLE_CACHE=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_COOKIE_MAX_AGE=86400000

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key
FILE_ENCRYPTION_KEY=your-file-encryption-key

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_HTTPS_REDIRECT=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable Debug Mode
DEBUG=true

# Enable API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs

# Enable Database Seeding
ENABLE_DB_SEEDING=false

# Enable Test Data
ENABLE_TEST_DATA=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# SSL Certificate Paths (for production)
SSL_CERT_PATH=/path/to/certificate.pem
SSL_KEY_PATH=/path/to/private-key.pem
SSL_CA_PATH=/path/to/ca-bundle.pem

# Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_MIN=2
DB_POOL_MAX=20

# Worker Processes
WORKER_PROCESSES=4

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Configuration
ENABLE_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_CHATBOT=true
ENABLE_FRAUD_DETECTION=true
ENABLE_BLOCKCHAIN=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Google Services
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft Azure
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# AWS Services
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
NOTIFICATION_EMAIL_FROM=noreply@healthcaresystem.com

# Push Notifications
ENABLE_PUSH_NOTIFICATIONS=true
PUSH_NOTIFICATION_SERVICE=firebase

# SMS Notifications
ENABLE_SMS_NOTIFICATIONS=false
SMS_SERVICE=twilio

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================

# HIPAA Compliance
ENABLE_HIPAA_COMPLIANCE=true
AUDIT_LOG_RETENTION_DAYS=2555

# Data Retention
DATA_RETENTION_DAYS=2555
AUTO_DELETE_EXPIRED_DATA=true

# Audit Trail
ENABLE_AUDIT_TRAIL=true
AUDIT_LOG_LEVEL=info

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# Database Optimization
DB_QUERY_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# API Optimization
API_RESPONSE_TIMEOUT=30000
API_REQUEST_SIZE_LIMIT=10mb

# Caching Optimization
CACHE_HIT_RATIO_TARGET=0.8
CACHE_WARMUP_ENABLED=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_MONGO_URI=mongodb://localhost:27017/healthcare-system-test

# Test Environment
TEST_NODE_ENV=test
TEST_PORT=5001

# Test Data
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker Configuration
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=your-docker-registry

# Kubernetes Configuration
KUBERNETES_NAMESPACE=healthcare-system
KUBERNETES_REPLICAS=3

# Load Balancer Configuration
LOAD_BALANCER_ALGORITHM=round_robin
LOAD_BALANCER_HEALTH_CHECK_PATH=/health

# =============================================================================
# MAINTENANCE MODE
# =============================================================================

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Maintenance Schedule
MAINTENANCE_START_TIME=2024-01-01T02:00:00Z
MAINTENANCE_END_TIME=2024-01-01T04:00:00Z

# =============================================================================
# FRONTEND CONFIGURATION (React)
# =============================================================================

# Frontend Environment Variables (prefixed with REACT_APP_)
REACT_APP_API_URL=http://localhost:5000
REACT_APP_WS_URL=ws://localhost:5000
REACT_APP_ENV=development

# Blockchain Configuration (Frontend)
REACT_APP_INFURA_API_KEY=your-infura-api-key
REACT_APP_CONTRACT_ADDRESS=your-smart-contract-address
REACT_APP_NETWORK_ID=1

# IPFS Configuration (Frontend)
REACT_APP_PINATA_API_KEY=your-pinata-api-key
REACT_APP_PINATA_SECRET_API_KEY=your-pinata-secret-key

# AI Services (Frontend)
REACT_APP_OPENAI_API_KEY=your-openai-api-key
